  <script>
       var x=100;
       var y=900;
       var result=x+y;
       console.log("Result is  = "+result);
       
       function clearMessage(){
    	   document.getElementById("emessage").innerHTML="";
       }
       
       function checkName(){
    	   var inputObj=document.getElementById("pname");
    	   var pname=inputObj.value;
    	   var spanObj=document.getElementById("emessage");
    	   if(pname.length==0){
    		   spanObj.innerHTML="Sorry name cannot be empty!!";
    		   return;
    	   }
    	   spanObj.innerHTML="Hello Your name is Mr. "+pname;
       }
   
  </script>
  
