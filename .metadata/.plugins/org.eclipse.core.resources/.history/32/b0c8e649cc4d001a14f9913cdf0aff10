   <div class="container">
     <img src="img/signup.png">
      <hr/>
      <label>Enter Name</label>
      <input type="text" id="pname"  name="pname" class="form-control" style="width: 50%" onkeydown="clearMessage();">
      
       <span id="emessage" style="color:red;font-size: 18px;font-weight: bold;">..</span>
       <br/> <br/>
      <button type="button" class="btn btn-primary" onclick="checkName();">Welcome</button>
   </div>

  
  
