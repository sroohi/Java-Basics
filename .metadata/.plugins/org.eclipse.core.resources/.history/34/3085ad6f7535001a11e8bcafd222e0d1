package coursesBasic;

public class StringBufferExample {
	public static void main(String[] args) {
		StringBuffer sb = new StringBuffer("Hi My Name Is");

		// StringBuffer append method Example//
		sb.append(" Shawn");
		sb.append(" Roohi");
		System.out.println("- STRING BUFFER APPEND OUTPUT" + "\n" + sb);

		// StringBuffer insert method//
		sb.insert(2, " everyone");
		System.out.println("- STRING BUFFER INSERT OUTPUT" + "\n" + sb);

		// StringBuffer replace method
		sb.replace(0, 2, "Hello");
		System.out.println("- STRING BUFFER REPLACE OUTPUT" + "\n" + sb);

		// StringBuffer delete method
		sb.delete(5, 14);
		System.out.println("- STRING BUFFER DELETE OUTPUT" + "\n" + sb);

		// StringBuffer reverse method example
		sb.reverse();
		System.out.println("- STRING BUFFER REVERSE OUTPUT" + "\n" + sb);

		// StringBuffer capacity method example
		System.out.println("STRING BUFFER CAPACITY OUTPUT" + "\n" + sb.capacity());

	}

}
