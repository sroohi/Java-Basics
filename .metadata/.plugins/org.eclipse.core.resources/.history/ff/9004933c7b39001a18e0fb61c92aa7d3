package coursesBasic;

public class VariableExamples {
	public static void main(String args[]) {
		// Add Two Numbers
		int a = 10;
		int b = 15;
		int c = a + b;
		System.out.println("Adding Two Numbers-->" + c);
		// Widening
		int a1 = 10;
		float b1 = a1;
		System.out.println("Widening-->" + a1);
		System.out.println("Widening-->" + b1);
		// Narrowing
		float c1 = 11.45f;
		int c2 = (int) c1;
		System.out.println("Narrowing-->" + c1);
		System.out.println("Narrowing-->" + c2);
		// Overflow
		int a2 = 490;
		byte b2 = (byte) a2;
		System.out.println("Overflow-->" + a2);
		System.out.println("Overflow -->" + b2);
		// Adding Lower Type
		byte a3 = 10;
		byte b3 = 10;
		byte c3 = (byte) (a + b);
		System.out.println("Adding Lower Type-->" + c3);
	}

}
